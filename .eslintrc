{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "all" }],
    "max-len": ["error", 100],
    "complexity": ["error", 10],
    "max-nested-callbacks": ["error", 5],
    "max-statements": ["error", 60],
    "max-lines": ["error", 500],
    "one-var": ["error", "never"],
    "func-style": ["error", "declaration", { "allowArrowFunctions": false }],
    "no-console": "off",
    "no-var": "error",
    "prefer-const": "error",
    "strict": ["error", "global"],
    "no-prototype-builtins":"off"
  }
}
