{
  "name": "poker",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Elio Capella",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "coverage": "npm run coverage:backend && npm run coverage:frontend",
    "coverage:backend": "node --test --experimental-test-coverage --test-coverage-include='src/backend/**/*.js' 'test/backend/**/*.js'",
    "coverage:frontend": "web-test-runner --coverage",
    "coverage:json": "npm run coverage:json:backend && npm run coverage:json:frontend",
    "coverage:json:backend": "NODE_V8_COVERAGE=coverage/backend node --test --experimental-test-coverage --test-coverage-include='src/backend/**/*.js' 'test/backend/**/*.js'",
    "coverage:json:frontend": "COVERAGE_JSON=true web-test-runner --coverage",
    "duplicates": "jscpd src test --min-tokens 100 --threshold 5",
    "format": "prettier --write .",
    "lint": "eslint --fix . && npm run lint:css",
    "lint:css": "stylelint --fix 'src/frontend/**/*.js'",
    "start": "node --env-file=.env --watch src/backend",
    "start:ui-catalog": "node --watch test/ui-catalog/server.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "node --test 'test/backend/**/*.js'",
    "test:e2e": "playwright test",
    "test:e2e:debug": "DEBUG=pw:api DEBUG_E2E=1 playwright test",
    "test:frontend": "web-test-runner",
    "test:ui-catalog": "playwright test --config=playwright.ui-catalog.config.js",
    "test:ui-catalog:debug": "DEBUG=pw:api playwright test --config=playwright.ui-catalog.config.js",
    "test:ui-catalog:update": "rm -rf test/ui-catalog/ui-catalog.test.js-snapshots && playwright test --config=playwright.ui-catalog.config.js --update-snapshots",
    "typecheck": "tsc",
    "validate": "npm run format && npm run lint && npm run typecheck && npm run duplicates && npm run test && npm run test:ui-catalog"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@open-wc/testing": "4.0.0",
    "@playwright/test": "1.58.2",
    "@types/mime-types": "3.0.1",
    "@types/node": "25.2.1",
    "@types/ws": "8.18.1",
    "@web/test-runner": "0.20.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-lit": "2.1.1",
    "eslint-plugin-playwright": "2.5.1",
    "globals": "17.3.0",
    "jscpd": "4.0.8",
    "postcss-lit": "1.3.1",
    "prettier": "3.8.1",
    "sinon": "21.0.1",
    "stylelint": "17.1.1",
    "stylelint-config-standard": "40.0.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@lit/task": "1.0.3",
    "lit": "3.3.2",
    "ws": "8.19.0"
  }
}
