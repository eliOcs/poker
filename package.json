{
  "name": "poker",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Elio Capella",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "coverage": "npm run coverage:backend && npm run coverage:frontend",
    "coverage:backend": "node --test --experimental-test-coverage --test-coverage-include='src/backend/**/*.js' 'test/backend/**/*.js'",
    "coverage:frontend": "web-test-runner --coverage",
    "coverage:json": "npm run coverage:json:backend && npm run coverage:json:frontend",
    "coverage:json:backend": "NODE_V8_COVERAGE=coverage/backend node --test --experimental-test-coverage --test-coverage-include='src/backend/**/*.js' 'test/backend/**/*.js'",
    "coverage:json:frontend": "COVERAGE_JSON=true web-test-runner --coverage",
    "duplicates": "jscpd src test --ignore 'test/**/fixtures.js'",
    "format": "prettier --write .",
    "lint": "eslint --fix . && npm run lint:css",
    "lint:css": "stylelint 'src/frontend/**/*.js'",
    "start": "node --env-file=.env --watch src/backend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "node --test 'test/backend/**/*.js'",
    "test:e2e": "playwright test",
    "test:frontend": "web-test-runner",
    "test:ui-catalog": "playwright test --config=playwright.ui-catalog.config.js",
    "test:ui-catalog:update": "rm -rf test/ui-catalog/ui-catalog.test.js-snapshots && playwright test --config=playwright.ui-catalog.config.js --update-snapshots",
    "typecheck": "tsc",
    "validate": "npm run format && npm run lint && npm run typecheck && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@open-wc/testing": "4.0.0",
    "@playwright/test": "1.57.0",
    "@types/mime-types": "3.0.1",
    "@types/node": "25.0.3",
    "@types/ws": "8.18.1",
    "@web/test-runner": "0.20.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-lit": "2.1.1",
    "globals": "16.5.0",
    "jscpd": "4.0.5",
    "postcss-lit": "1.3.1",
    "prettier": "3.7.4",
    "sinon": "21.0.1",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "lit": "3.3.2",
    "mime-types": "3.0.2",
    "ws": "8.18.3"
  }
}
